	private String getString(int length, boolean beenLeft, boolean beenRight, boolean parentCalledThis, boolean beenAdded) {
		StringBuilder sb = new StringBuilder();
		if(!this.left.equals(EditTree.NULL_NODE)&&!beenLeft){
			sb.append(this.left.getString(length, false, false, true, false));
		}
		if(sb.length()<length){
			if(!beenAdded){
				sb.append(this.element);
			}
			if(sb.length()<length){
				if(!this.right.equals(EditTree.NULL_NODE)&&!beenRight){
					sb.append(this.right.getString(length-sb.length(), false, false, true, false));
				}
				if(sb.length()<length){
					if(!this.parent.equals(EditTree.root_parent)&&!parentCalledThis){
						sb.append(this.parent.getString(length-sb.length(), true, this.parent.right.equals(this), false, this.parent.right.equals(this)));
					}
				}
			}
		}
		return sb.toString();
	}

	public int find(String s) {
		int pos = -1;
		if(!this.left.equals(EditTree.NULL_NODE)){
			pos = this.left.find(s);
		}
		if(pos==-1){
			//check this one
			if(this.element==s.charAt(0)){
				pos = this.rank;
			}
		}
		return pos;
	}

